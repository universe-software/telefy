<?xml version='1.0' encoding='utf-8'?>
<widget id="telefy" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A general purpose internet communications app for chat, forums, message boards, etc.
        It uses peer-to-peer communication technology so there's no need for accounts or a centralized service.
    </description>
    <author email="plexi.eater+universe@gmail.com" href="https://github.com/Hyperdraw">
        Hyperdraw
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="electron">
        <icon src="www/favicon.png" />
    </platform>
</widget>
